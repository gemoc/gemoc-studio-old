<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.gemoc.gemoc_modeling_workbench.ui.addnature.contribution">
         <action
               class="org.gemoc.gemoc_modeling_workbench.ui.builder.ToggleNatureAction"
               enablesFor="+"
               icon="icons/IconeGemocModel-16.png"
               id="org.gemoc.gemoc_modeling_workbench.ui.addRemoveNatureAction"
               label="Add Executable Modeling Nature"
               menubarPath="org.eclipse.ui.projectConfigure/additions">
         </action>
         <visibility>
         <and>
            <not>
                <objectState name="projectNature" value="org.gemoc.gemoc_modeling_workbench.ui.gemocReflectiveModelNature"/>
            </not>
            <objectClass name="org.eclipse.core.resources.IProject" />
          </and>
         </visibility>
      </objectContribution>
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.gemoc.gemoc_modeling_workbench.ui.removenature.contribution">
         <action
               class="org.gemoc.gemoc_modeling_workbench.ui.builder.ToggleNatureAction"
               enablesFor="+"
               icon="icons/IconeGemocModel-16.png"
               id="org.gemoc.gemoc_modeling_workbench.ui.addRemoveNatureAction"
               label="Remove Executable Modeling Nature (Reflective)"
               menubarPath="org.eclipse.ui.projectConfigure/additions">
         </action>
         
	    <visibility>
	       <and>
	          <objectClass
	                name="org.eclipse.core.resources.IProject">
	          </objectClass>
	          <objectState
	                name="projectNature"
	                value="org.gemoc.gemoc_modeling_workbench.ui.gemocReflectiveModelNature">
	          </objectState>
	       </and>
	    </visibility>
      </objectContribution>
   </extension>
   <!-- definitions of launch menu -->
   	<extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.gemoc.gemoc_modeling_workbench.ui.launcher.Launcher"
            id="org.gemoc.gemoc_modeling_workbench.ui.launcher"
            modes="run, debug"
            name="Gemoc eXecutable Model"
            public="true"
            sourceLocatorId="org.gemoc.gemoc_modeling_workbench.ui.sourceLocator">
      </launchConfigurationType>
   </extension>
    <extension
          point="org.eclipse.debug.ui.debugModelPresentations">
       <debugModelPresentation
             class="org.gemoc.gemoc_modeling_workbench.ui.launcher.GemocDebugModelPresentation"
             id="org.gemoc.gemoc_modeling_workbench.ui.debugModel">
       </debugModelPresentation>
    </extension>
       <extension
          point="org.eclipse.debug.ui.debugModelPresentations">
       <debugModelPresentation
             class="org.gemoc.gemoc_modeling_workbench.ui.launcher.PlainK3DebugModelPresentation"
             id="org.gemoc.gemoc_modeling_workbench.ui.plainK3debugModel">
       </debugModelPresentation>
    </extension>
    <extension
          id="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.breakpointMarker"
          point="org.eclipse.core.resources.markers">
       <persistent
             value="true">
       </persistent>
       <super
             type="fr.obeo.dsl.debug.ide.breakpointMarker">
       </super>
       <attribute
             name="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.breakOnLogicalStep">
       </attribute>
       <attribute
             name="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.breakOnMSE">
       </attribute>
    </extension>
    <extension
          point="org.eclipse.debug.core.breakpoints">
       <breakpoint
             class="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.GemocBreakpoint"
             id="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.gemocBreakpoint"
             markerType="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.breakpointMarker"
             name="Gemoc Breakpoints">
       </breakpoint>
    </extension>
   <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
    <launchConfigurationTypeImage
        icon="icons/IconeGemocModel-16.png"
        configTypeID="org.gemoc.gemoc_modeling_workbench.ui.launcher"
        id="org.gemoc.gemoc_modeling_workbench.ui.launcher.image">
    </launchConfigurationTypeImage>
	</extension>
	   <extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
	    <launchConfigurationTabGroup
           class="org.gemoc.gemoc_modeling_workbench.ui.launcher.LauncherTabGroup"
           id="org.gemoc.gemoc_modeling_workbench.ui.launcher.tabGroup"
           type="org.gemoc.gemoc_modeling_workbench.ui.launcher">
	    </launchConfigurationTabGroup>
	</extension>
    <extension
          point="org.eclipse.core.expressions.propertyTesters">
       <propertyTester
             class="org.gemoc.gemoc_modeling_workbench.concurrent.ui.propertytesters.GemocConcurrentPropertyTester"
             id="org.gemoc.gemoc_modeling_workbench.concurrent.ui.propertytesters.GemocConcurrentPropertyTester"
             namespace="org.gemoc.gemoc_modeling_workbench.concurrent.ui.propertytesters"
             properties="isModel, isExecutableDomainSpecificModel"
             type="org.eclipse.core.runtime.IAdaptable">
       </propertyTester>
    </extension>
	<extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.gemoc.gemoc_modeling_workbench.ui.launcher.Launcher"
            description="Create a configuration to launch an Eclipse application in debug mode."
            icon="icons/IconeGemocModel-16.png"
            id="org.gemoc.gemoc_modeling_workbench.ui.GemocExecutableReflectiveModel"
            label="Gemoc eXecutable Model"
            modes="run, debug">
         <configurationType
               id="org.gemoc.gemoc_modeling_workbench.ui.launcher">
         </configurationType>
         <contextualLaunch>
            <enablement>
            	<with variable="selection">
		     		<count value="1"/>
	      			<iterate>
	       				<or>
	        				<test property="org.gemoc.gemoc_modeling_workbench.concurrent.ui.propertytesters.isExecutableDomainSpecificModel"/>
	        				<test property="org.eclipse.debug.ui.matchesPattern"
	                        	value="*.xmi">
	                     	</test>
	        			</or>
	      			</iterate>
		     </with>
            </enablement>
            <contextLabel
                  label="Gemoc eXecutable Model"
                  mode="run">
            </contextLabel>
            <contextLabel
                  label="Gemoc eXecutable Model"
                  mode="debug">
            </contextLabel>
         </contextualLaunch>
      </shortcut>
   </extension>
 <extension
       point="org.eclipse.debug.ui.detailPaneFactories">
    <detailFactories
          class="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.BreakpointDetailPaneFactory"
          id="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.detailFactories">
       <enablement>
          <with
                variable="selection">
             <count
                   value="1">
             </count>
             <iterate>
                <instanceof
                      value="org.gemoc.gemoc_modeling_workbench.ui.breakpoint.GemocBreakpoint">
                </instanceof>
             </iterate>
          </with>
       </enablement>
    </detailFactories>
 </extension>
 <extension
       point="org.eclipse.ui.newWizards">
    <category
          id="org.gemoc.gemoc_modeling_workbench.ui.category"
          name="GEMOC">
    </category>
    <wizard
          category="org.gemoc.gemoc_language_workbench.ui"
          class="org.gemoc.gemoc_modeling_workbench.ui.wizards.CreateNewGemocModelingProject"
          icon="icons/IconeGemocModel-16.png"
          id="org.gemoc.gemoc_modeling_workbench.ui.wizards.CreateNewGemocModelingProject"
          name="GEMOC Modeling Project"
          project="true">
    </wizard>
 </extension>
   <extension
         point="org.eclipse.sirius.externalJavaAction">
      <javaActions
            actionClass="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.GemocDebugAs"
            id="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.gemocDebugAs">
      </javaActions>
      <javaActions
            actionClass="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.GemocToggleBreakpoint"
            id="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.gemocToggleBreakpoint">
      </javaActions>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            class="org.gemoc.gemoc_modeling_workbench.ui.launcher.GemocSourceLocator"
            id="org.gemoc.gemoc_modeling_workbench.ui.sourceLocator"
            name="Gemoc Source Locator">
      </sourceLocator>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <actionSet
               id="org.eclipse.debug.ui.launchActionSet">
         </actionSet>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.sirius.ui.tools.perspective.modeling">
         <newWizardShortcut
               id="org.gemoc.gemoc_modeling_workbench.ui.wizards.CreateNewGemocModelingProject">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            menuGroupId="org.gemoc.gemoc_modeling_workbench.ui.category"
            type="new"
            wizardId="org.gemoc.gemoc_modeling_workbench.ui.wizards.CreateNewGemocModelingProject">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.eclipse.sirius.ui.tools.perspective.modeling">
               </equals>
            </with>
         </enablement>
      </commonWizard>
   </extension>
   
      <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="org.gemoc.modeling.menu.contribution">
         <menu
               icon="icons/IconeGemocModel-16.png"
               id="org.gemoc.modeling.menu"
               label="GEMOC advanced tools"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               label="Generate extended CCSL (use language specified QVTO)"
               class="org.gemoc.gemoc_modeling_workbench.concurrent.ui.actions.GenerateExtendedCCSLFile"
               menubarPath="org.gemoc.modeling.menu/group1"
               id="org.gemoc.modeling.generate.extendedccsl">
         </action>
         <action
               class="org.gemoc.gemoc_modeling_workbench.concurrent.ui.actions.ChooseQVTOAndGenerateExtendedCCSLFile"
               id="org.gemoc.modeling.generate.extendedccsl2"
               label="Generate extended CCSL (choose QVTO)"
               menubarPath="org.gemoc.modeling.menu/group1">
         </action>

         <action
               label="Generate time model (use language specified QVTO)"
               class="org.gemoc.gemoc_modeling_workbench.concurrent.ui.actions.GenerateTimeModelFile"
               menubarPath="org.gemoc.modeling.menu/group1"
               id="org.gemoc.modeling.generate.extendedccsl">
         </action>
         <action
               class="org.gemoc.gemoc_modeling_workbench.concurrent.ui.actions.ChooseQVTOAndGenerateTimeModelFile"
               id="org.gemoc.modeling.generate.extendedccsl2"
               label="Generate time model (choose QVTO)"
               menubarPath="org.gemoc.modeling.menu/group1">
         </action>

      </objectContribution>
   </extension>
      <extension
            point="org.eclipse.ui.commands">
         <command
               defaultHandler="org.gemoc.gemoc_modeling_workbench.ui.commands.ShowCallerHandler"
               id="org.gemoc.gemoc_modeling_workbench.ui.timeline.ShowCallerCommand"
               name="Show Caller">
         </command>
         <command
               defaultHandler="org.gemoc.gemoc_modeling_workbench.ui.commands.GemocToggleBreakpointHandler"
               id="org.gemoc.gemoc_modeling_workbench.ui.ToggleBreapointCommand"
               name="Toggle breapoint">
         </command>
      </extension>
      <extension
            point="org.eclipse.ui.menus">
         <menuContribution
               allPopups="false"
               locationURI="popup:org.gemoc.execution.engine.io.views.timeline.TimeLineView">
            <command
                  commandId="org.gemoc.gemoc_modeling_workbench.ui.timeline.ShowCallerCommand"
                  icon="icons/showCaller.png"
                  label="Show Caller"
                  style="toggle">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="selection">
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <instanceof
                                 value="fr.obeo.timeline.editpart.PossibleStepEditPart">
                           </instanceof>
                        </iterate>
                     </and>
                  </with>
               </visibleWhen>
            </command>
         </menuContribution>
         <menuContribution
               allPopups="false"
               locationURI="popup:org.gemoc.gemoc_modeling_workbench.concurrent.ui.views.stimulimanager.StimuliManagerView">
            <command
                  commandId="org.gemoc.gemoc_modeling_workbench.ui.ToggleBreapointCommand"
                  icon="icons/breakpoint.gif"
                  label="Toggle breakpoint"
                  style="push">
            </command>
         </menuContribution>
      </extension>
      <extension
            point="org.eclipse.ui.startup">
         <startup
               class="org.gemoc.gemoc_modeling_workbench.concurrent.ui.ModelingWorkbenchEarlyStartup">
         </startup>
      </extension>
   
</plugin>
